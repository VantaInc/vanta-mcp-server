{
  "name": "vanta-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server providing tools for interfacing with the Vanta compliance platform API",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "vanta-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "start": "yarn build && node build/index.js",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "eval": "tsc && node build/eval/eval.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "fix": "npm run format && npm run lint:fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "yarn build && yarn test && yarn lint"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "vanta",
    "mcp",
    "model-context-protocol",
    "compliance",
    "security",
    "soc2",
    "fedramp",
    "api",
    "typescript",
    "ai",
    "llm"
  ],
  "author": {
    "name": "Vanta, Inc.",
    "email": "support@vanta.com",
    "url": "https://vanta.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/VantaInc/vanta-mcp-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VantaInc/vanta-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/VantaInc/vanta-mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/node": "^22.13.17",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "openai": "^4.29.1",
    "prettier": "^3.2.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
